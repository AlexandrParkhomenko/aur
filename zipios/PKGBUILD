#zipios_tests[8035]: version 2.2.0, seed is 1555679159
#Filters: 
#===============================================================================
#All tests passed (2223964 assertions in 35 test cases)

package() {
  cd ${startdir}/build/${pkgname}
  make DESTDIR=$pkgdir install
}

