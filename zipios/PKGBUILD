build() {
  cd "${startdir}"
  if [ ! -d "build/${pkgname}" ]; then
    mkdir -p build/${pkgname};
  fi
  cd build/${pkgname}
  cmake ${srcdir}/${pkgname} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DLIB_INSTALL_DIR=/usr/lib \
    -Wno-dev \
    -DBUILD_DOCUMENTATION=OFF \
    -DBUILD_ZIPIOS_TESTS=OFF
  make
}

#check() {
